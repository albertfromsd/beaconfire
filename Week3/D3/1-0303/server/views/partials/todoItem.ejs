<tr class="todolist-table-row item-info" id="info-<%= idx %>">
  <td> <%= title %> </td>
  <td> <%= description %> </td>
  <td> <%= priority %> </td>
  <td> <%= status %> </td>
  <td class="todolist-table-action-buttons">
    <button 
      id="edit-btn-<%-idx%>"
      class="edit-btn"
      onclick="toggleRow('<%= idx %>')"
    >
        Edit
    </button>
    <form action="/todo/todolist" method="POST">
      <input type="hidden" name="_method" value="DELETE"/>
      <input type="hidden" name="_id" value="<%= idx %>"/>
      <button onclick="deleteRow('<%= idx %>')" >
        Delete
      </button>
    </form>
  </td>
</tr>
<tr class="todolist-table-row item-edit hidden" id="edit-<%= idx %>">
  <form action="/todo/todolist?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT"/>
    <input type="hidden" name="_id" value="<%= idx %>"/>
    <td> 
      <input type="text" name="title" value="<%= title %>" />
    </td>
    <td> 
      <input type="text" name="description" value="<%= description %>">
    </td>
    <td> 
      <select id="todo-form-priority" name="priority" value="<%= priority %>">
        <option value="high">High</option>
        <option value="normal">Normal</option>
        <option value="low">Low</option>
      </select>
    </td>
    <td> 
      <select id="todo-form-status" name="status" value="<%= status %>">
        <option value="completed">Completed</option>
        <option value="in-progress">In Progress</option>
      </select>
    </td>
    <td class="todolist-table-action-buttons">
      <button 
        id="save-btn-<%= idx %>"
        class="save-btn"
        type="submit"
      >
        Save
      </button>
      <button
        id="cancel-edit-btn-<%= idx %>"
        class="cancel-edit-btn"
        type="button"
        onclick="toggleRow('<%= idx %>')"
      >
        Cancel
      </button>
    </td>
  </form>
</tr>